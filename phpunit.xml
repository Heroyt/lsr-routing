<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" bootstrap="tests/bootstrap.php" colors="true" stopOnFailure="false" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/11.5/phpunit.xsd" cacheDirectory=".phpunit.cache">
  <coverage>
    <report>
      <clover outputFile="build/coverage.xml"/>
      <html outputDirectory="build/coverage"/>
      <php outputFile="build/coverage.serialized"/>
    </report>
  </coverage>
  <testsuites>
    <testsuite name="PHP Framework">
      <directory>tests</directory>
    </testsuite>
  </testsuites>
  <logging/>
  <source>
    <include>
      <directory>./src</directory>
      <directory>./build</directory>
    </include>
  </source>
</phpunit>
